<!-- comments.handlebars -->

{{#if comments.length}}
  <div class="comments-section">
    <h3>Comments</h3>
    <ul>
      {{#each comments as |comment|}}
        <li>
          <p>{{comment.comment_text}}</p>
          <!-- Add more comment information as needed -->
        </li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <p>No comments yet. Be the first to comment!</p>
{{/if}}
